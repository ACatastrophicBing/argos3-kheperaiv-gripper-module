<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="600"
                ticks_per_second="10"
                random_seed="124" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <buzz_controller_kheperaiv id="khivbzgrp">
      <actuators>
        <differential_steering implementation="default" />
        <!-- <kheperaiv_gripper     implementation="default"/>
        <kheperaiv_turret      implementation="default" /> -->
        <range_and_bearing     implementation="default" />
      </actuators>
      <sensors>
        <differential_steering implementation="default" />
        <kheperaiv_proximity  implementation="default" show_rays="true" />
        <kheperaiv_ultrasound implementation="default" show_rays="false" />
        <range_and_bearing   implementation="medium" medium="rab"
                             show_rays="true" noise_std_dev="0" />
        <positioning         implementation="default" />
        <!-- <kheperaiv_turret      implementation="default" /> -->
      </sensors>
      <params bytecode_file="gripper_test_0.bo" debug_file="gripper_test_0.bdb">
      <wheel_turning hard_turn_angle_threshold="90"
                      soft_turn_angle_threshold="70"
                      no_turn_angle_threshold="10"
                      max_speed="10" />
      </params>
    </buzz_controller_kheperaiv>

  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="5, 5, 1" center="0,0,0.5">

    <box id="wall_north" size="4,0.1,0.5" movable="false">
      <body position="0,2,0" orientation="0,0,0" />
    </box>
    <box id="wall_south" size="4,0.1,0.5" movable="false">
      <body position="0,-2,0" orientation="0,0,0" />
    </box>
    <box id="wall_east" size="0.1,4,0.5" movable="false">
      <body position="2,0,0" orientation="0,0,0" />
    </box>
    <box id="wall_west" size="0.1,4,0.5" movable="false">
      <body position="-2,0,0" orientation="0,0,0" />
    </box>

    <kheperaiv id="kiv_0">
      <body position="0,0,0" orientation="0,0,0" />
      <controller config="khivbzgrp" />
    </kheperaiv>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <!-- <physics_engines>
    <tracking>
      <updaters>
        <vicon_updater/>
      </updaters>
      <assigners>
        <Khepera default="khivbzgrp"/>
      </assigners>
    </tracking>
  </physics_engines>
  
  <loop_functions label="MasterLoopFunctions">
    <sub_loop_function label="BaseNetworking" />
  </loop_functions> -->

   <physics_engines>
    <dynamics2d id="dyn2d" />
    <!-- <pointmass3d id="dyn2d" /> -->
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <range_and_bearing id="rab" />
    <led id="leds" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <user_functions label="buzz_qt" />
      <camera>
        <placements>
          <placement index="0" position="0,0,11" look_at="0,0,0" up="0,1,0" lens_focal_length="65" />
          <placement index="2" position="4.78486,4.0464,2.7378" look_at="4.08294,3.44453,2.35694" up="-0.289125,-0.247915,0.924632" lens_focal_length="53.75" />
          <placement index="3" position="0.0142988,6.39367,3.96617" look_at="0.0142988,5.54847,3.43172" up="-2.16018e-16,-0.534447,0.845202" lens_focal_length="65" />
          <placement index="1" position="0.0142988,1.75213,1.03116" look_at="0.0142988,0.90693,0.496709" up="-2.16018e-16,-0.534447,0.845202" lens_focal_length="65" />
        </placements>
      </camera>
    </qt-opengl>
  </visualization>


</argos-configuration>
